<div class="container">
  <div class="row justify-content-start">
    <div class="col-9">
      <h2 class="my-5 col-4">ログイン</h2>
  
      <%= form_with model: @user, url: user_session_path do |f| %>
      
        <table class="table table-borderless">
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
        
          <tr>
            <td><%= f.label :password, "パスワード" %></td>
            <td><%= f.password_field :password, autocomplete: "current-password" %></td>
          </tr>
        
          <tr>
            <td></td>
            <td><%= f.submit "ログイン" %></td>
          </tr>
        </table>
      <% end %>
      
    </div>
  </div>
  <%= render "public/shared/links" %>
</div>


<%# 管理者とログインしていないユーザーはいいね機能は表示しない %>
<% if user_signed_in? %>
  <% if recipe.favorited_by?(current_user) %>
      <%= link_to recipe_favorite_path(recipe), method: :delete, remote: true do %>
        ❤️<%= recipe.favorites.count %> いいね
      <% end %>
  <% else %>
      <%= link_to recipe_favorite_path(recipe), method: :post, remote: true do %>
        ♡<%= recipe.favorites.count %> いいね
      <% end %>
  <% end %>
<% end %>
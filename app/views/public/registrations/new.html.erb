<div class="container">
  <div class="row justify-content-start">
    <%= render "public/shared/error_messages", resource: resource %>
    <div class="col-10 offset-2">
      <h2 class="my-5 col-4">新規会員登録</h2>
      
      <%= form_with model: @user, url: user_registration_path do |f| %>
        
        <table class="table table-borderless">
           <tr>
            <td><%= f.label :name, "ユーザーネーム" %></td>
            <td><%= f.text_field :name, autofocus: true, autocomplete: "name"%></td>
          </tr>
        
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          
          <tr>
            <td><%= f.label :password, "パスワード(6文字以上)" %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          
          <tr>
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
           </tr>
           
           <tr>
            <td></td>
            <td><%= f.submit "新規登録", class: "btn btn-info" %></td>
           </tr>
        </table>
      <% end %>
    </div>
  </div>
  <%= render "public/shared/links" %>
</div>

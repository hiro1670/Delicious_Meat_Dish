<div class="container">
  <div class="row">
    <h1 class="mt-3 my-3"><%= @recipe.name %>レシピ詳細</h1>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-mx-auto">
      <%= image_tag @recipe.get_recipe_image(500,400) %></br>
      
      <%= @recipe.name %></br>
      
      <%= @recipe.explanation %></br>
      
      <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
      <table  class="table table-borderless">
        <tr>
          <td><%= recipe_ingredient.name %></td>
          <td><%= recipe_ingredient.quantity %></td>
        </tr>
      </table>
      <% end %>
      
      
      <%= @recipe.process %>
      
      <table class="table-borderless">
        <% if @recipe.customer == current_customer %>
        <tr>
          <td><%= link_to "削除", recipe_path(@recipe), method: :delete %></td>
          <td><%= link_to "レシピ編集", edit_recipe_path(@recipe), class:'btn btn-success' %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
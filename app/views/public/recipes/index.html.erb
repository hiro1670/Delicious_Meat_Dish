<div class="container">
  <%= render 'layouts/flash' %>
  <div class="row justify-content-between">
    <h2 class="mt-5 bg-light">レシピ一覧（全<%= @recipes.total_count %>件）</h2>
    
    <div class="col-md-auto col-sm-10 mt-5">
      <h4>
        <select class="ui fluid dropdown" onChange="location.href=value;">
          <option value="">並び替え</option>
          <option value="<%= recipes_path(latest: "true") %>">新着順</option>
          <option value="<%= recipes_path(old: "true") %>">古い順</option>
          <option value="<%= recipes_path(star_count: "true") %>">評価の高い順</option>
          <option value="<%= recipes_path(favorites_count: "true") %>">いいねが多い順</option>
          <option value="<%= recipes_path(read_counts_count: "true") %>">閲覧が多い順</option>
        </select>
      </h4>
    </div>
  </div>
</div>

<%= render 'list', recipes: @recipes %>

<%= paginate @recipes %>
<div class="container">
  <%= render 'layouts/flash' %>
  <div class="row justify-content-center">
    <div class="col-md-auto mt-4">
      <h3 class="bg-light">ユーザー一覧</h3>
    </div>
  </div>
  
  <div class="row justify-content-center">
    <div class="col-md-10 mt-3 mb-3">
      <table class="table text-center">
        <thead>
          <tr>
            <th>ユーザーID</th>
            <th>ユーザーネーム</th>
            <th>メールアドレス</th>
            <th>ユーザーステータス</th>
          </tr>
        </thead>
        
        <tbody>
          <% @user.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= link_to user.name, admin_user_path(user.id) %></td>
            <td><%= user.email %></td>
            <td>
              <% if user.is_deleted ==  false %>
                <p>有効</p>
              <% else %>
                <p>退会</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
        
      </table>
    </div>
  </div>
</div>

<%= paginate @users %>
<div class="container">
  <div class="row">
    <div class="col-4 mt-4">
      <h3><%= @user.name %> さんの詳細</h3>
    </div>
  </div>
  
  <%= render 'layouts/flash' %>
  
  <div class="row">
    <div class="col-10">
      <table class="table table-borderless mt-3">
        <tr>
          <td>ユーザーID</td>
          <td><%= @user.id %></td>
        </tr>
        
        <tr>
          <td>ユーザーネーム</td>
          <td><%= @user.name %></td>
        </tr>
        
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        
        <tr>
          <td>投稿数</td>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= @user.recipes.count %>
            <% end %>
          </td>
        </tr>
        
        <tr>
          <td>ユーザーステータス</td>
          <% if @user.is_deleted == false %>
            <td>有効</td>
          <% else %>
            <td>退会</td>
          <% end %>
        </tr>
        
        <tr>
          <td></td>
          <td><%= link_to "編集する", edit_admin_user_path(@user), class: 'btn btn-success' %></td>
        </tr>
      </table>
      
    </div>
  </div>
  
  <div class="row">
    <h4><%= @user.name %>さんのコメント一覧</h4>
  </div>
  
  <div class="row">
    <div class="col-6 mb-3">
      <% @recipe_comments.each do |recipe_comment| %>
         <div class="media border md-3">
           <div class="media-body">
             <%= recipe_comment.recipe.user.name %>さんの
            <%= recipe_comment.recipe.name %>
            <hr>
            <%= recipe_comment.comment %>
            <%= render 'public/recipes/star', recipe_comment: recipe_comment %>
            <%= link_to "削除", recipe_recipe_comment_path(recipe_comment.recipe, recipe_comment), method: :delete, class: 'btn btn-danger btn-sm' %></br>
      <% end %>
        </div>
      </div>
    </div>
  </div>
</div>